<div class="row">
  <div class="col">
    <a id="remove-cake-button" class="btn btn-danger float-right">
      <i class="icon-white icon-remove"></i> <strong>Delete this cake</strong>
    </a>
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a href="#cakes/<%= id %>/edit" class="nav-link active">Edit</a>
      </li>
      <li class="nav-item">
        <a class="nav-link add-photo">Add Photo</a>
      </li>
      <li class="nav-item">
        <a href="<%= Routes.cake_favorites_path(id) %>" class="nav-link">Fan Club</a>
      </li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-6">
    <% if (hasImage()) { %>
    <% photo = randomPhoto()%>
    <a href="#cakes/<%= id %>/photos/<%= photo.id %>">
      <img class="img-fluid" src="<%= photo.large_url %>" alt="<%= name %>" />
    </a>
    <% } %>
  </div>
  <div class="col-6">
    <h1><a href="#cakes/<%= id %>"><%= name %></a></h1>
    <span> <i class="icon-tags"></i> </span>
    <% if (typeof(tags) === "string") { %>
      <% _.each(tags.split(','), function(tag){ %>
        <a href="<%= Routes.creation_tag_path(tag) %>">
          <span class="label"><%= tag %></span>
        </a>
      <% }); %>
    <% } else { %>
      <% _.each(tags, function(tag){ %>
        <a href="<%= Routes.creation_tag_path(tag.name) %>">
          <span class="label"><%= tag.name %></span>
        </a>
      <% }); %>
    <% } %>
    <hr />
    <p><%= story %></p>
  </div>
</div>
<div class="row">
  <ul class="card-columns"></ul>
</div>
