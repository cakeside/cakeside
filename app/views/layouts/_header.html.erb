<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></a>
      <a class="brand" style="color:hotpink;" href="/">Cake<em>Side</em></a>
      <%= form_tag(search_path, :method => "get", :name => "search", :class => "navbar-search pull-left") do %>
        <input name="q" type="text" class="search-query" placeholder="Search" value="<%= @search %>" />
      <% end %>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to 'Artists', profiles_path %></li>
          <li><%= link_to 'Tutorials', tutorials_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Categories<b class="caret"></b></a>
            <ul class="dropdown-menu">
            <% cache @categories do %>
              <% @categories.each do |category| %>
                <li><%= link_to category.name, category_path(category) %></li>
              <% end %>
            <% end %>
            </ul>
          </li>
        </ul>
        <ul class="nav pull-right">
          <li class="hidden-phone">
            <%= link_to new_creation_path do %>
              Add Creation <i class="icon-edit icon-large"></i>
            <% end %>
          </li>
          <li class="hidden-phone">
            <%= link_to new_tutorial_path do %>
              Add Tutorial <i class="icon-edit icon-large"></i>
            <% end %>
          </li>
          <li class="divider-vertical hidden-phone"></li>
          <% if user_signed_in? %>
          <li>
            <%= link_to settings_path do %>
              <%= avatar_for(current_user, size: 24) %>
            <% end %>
          </li>
          <% else %>
            <li> <%= link_to "Sign In", new_user_session_path %> </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
