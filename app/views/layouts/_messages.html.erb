<% devise_flash -%>
<% if(flash.any?) -%>
  <div class="row">
    <div class="span12">
      <% flash.each do |key, value| -%>
        <% Array(value).uniq.each do |message| -%>
        <div class="alert alert-<%= key %>">
          <a class="close" data-dismiss="alert" href="#">Ã—</a>
          <!-- <h4 class="alert-heading"><%= key.to_s.titleize -%>!</h4> -->
          <%= message %>
        </div>
        <% end -%>
      <% end -%>
    </div>
  </div>
<% end -%>
