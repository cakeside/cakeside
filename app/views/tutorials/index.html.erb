<% provide(:description, "The latest tutorials") -%>
<% content_for :javascript do -%>
<script type="text/javascript">  
  $(function(){ $('.row').masonry({ itemSelector : '.span4' }); });
</script>
<% end -%>
<div class="row">
  <div class="span12">
    <%= link_to 'New Tutorial', new_tutorial_path %>
  </div>
</div>
<br />
<div class="row">
  <ul class="thumbnails">
    <% @tutorials.each do |tutorial| %>
      <div class="span4">
        <div class="thumbnail">
          <img src="<%= tutorial.image_url %>" />
          <div class="caption">
            <h3><a href="<%= tutorial.url %>" target="_blank"><%= tutorial.heading %></a> <small><%= tutorial.created_at.to_s :foomat %></small></h3>
            <p>
            <% tutorial.tags.each do |tag| -%>
              <a href="?tags=<%= tag.name %>"><span class="label"><%= tag.name %></span></a>
            <% end -%>
            </p>
            <p><%= tutorial.description %></p>
            <p><a class="btn btn-primary" href="<%= tutorial.url %>">Read</a> <a class="btn" href="<%= url_for tutorial %>">View</a></p>
          </div>
        </div>
      </div>
    <% end %>
  </ul>
</div>
