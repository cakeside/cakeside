<% @creations.each_with_index do |creation, index| %>
  <% if index % 3 == 0  %>
    <div class="row">
      <div class="span6">
        <h2><%= creation.name %> </h2>
        <% creation.categories.each do |category| %>
          <span class="label"><a href="/categories/<%= category.slug %>"><%= category.name %></a></span> &nbsp;
        <% end %> 
        <p> <%= creation.short_story %> </p>
        <p><a class="btn" href="<%= url_for creation %>">View details &raquo;</a></p>
      </div>
  <% elsif (index+1) % 3 == 0  %>
      <div class="span5">
        <h2><%= creation.name %> </h2>
        <% creation.categories.each do |category| %>
          <span class="label"><a href="/categories/<%= category.slug %>"><%= category.name %></a></span> &nbsp;
        <% end %> 
        <p> <%= creation.short_story %> </p>
        <p><a class="btn" href="<%= url_for creation %>">View details &raquo;</a></p>
      </div>
    </div><!-- end row -->
    <hr>
  <% else %>
      <div class="span5">
        <h2><%= creation.name %> </h2>
        <% creation.categories.each do |category| %>
          <span class="label"><a href="/categories/<%= category.slug %>"><%= category.name %></a></span> &nbsp;
        <% end %> 
        <p> <%= creation.short_story %> </p>
        <p><a class="btn" href="<%= url_for creation %>">View details &raquo;</a></p>
      </div>
      <% if index == (@creations.size - 1) %>
    </div>
      <% end %>
  <% end %>
<% end %>

<div class="row">
  <div class="span6"> &nbsp;</div>
  <div class="span5"> <p> <%= paginate @creations %> </p> </div>
  <div class="span5">&nbsp;</div>
</div>
