<div class="media">
  <%= link_to item, class: 'pull-left' do %>
    <img class="media-object" data-src="<%= item.image_url %>" alt="64x64" style="width: 64px; height: 64px;" src="<%= item.image_url %>">
  <% end %>
  <div class="media-body">
    <h4 class="media-heading"><%= item.heading %></h4>
    <%= item.description %>
  </div>
</div>
