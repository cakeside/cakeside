<div style="background: #000 url(/assets/sunset.png) no-repeat; border: none; margin-top:10px; margin-left:auto; margin-right:auto;width:960px;height:768px;">
  <div class="row">
    <div class="span10">
      <div class="logo"><img src="/assets/cakeside-logo.png" alt="arc-resources-ltd" width="100%" /></div>
    </div>
    <div class="span6">
      <div style="margin-top:100px;">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div class="span2">
            <%= f.email_field :email, :style => "height:20px;", :placeholder => 'Email', :size => 20 %>
          </div>
          <div class="span2">
            <%= f.password_field :password, :style => "height:20px;", :placeholder => 'Password',:size => 20 %>
          </div>
          <div class="span1">
            <%= f.submit "Sign in", :style => "width:100%;height:28px;", :class => "btn"%>
          </div>
          <div class="span1"> &nbsp; </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span10">
      &nbsp;
      <%= devise_error_messages! %>
    </div>
    <div class="span5">
      <%# <%= yield %>
      <h2>New to CakeSide? <em>Join Today!</em></h2>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <p><%= f.text_field :name, :class => ['forms'], :placeholder => 'Full Name', :style => 'width:100%;height:20px;' %></p>
        <p><%= f.email_field :email, :class => ['forms'], :placeholder => 'Email', :style => 'width:100%;height:20px;' %></p>
        <p><%= f.password_field :password, :class => ['forms'], :placeholder => 'Password', :style => 'width:100%;height:20px;' %></p>
        <p><%= f.password_field :password_confirmation, :class => ['forms'], :placeholder => 'Confirm Password', :style => 'width:100%;height:20px;' %></p>
        <p><%= f.submit "Sign up", :style => "height:28px;" %></p>
      <% end %>
      <%# <%= render :partial => "devise/shared/links" %>
    </div>
    <div class="span1">
      &nbsp;
    </div>
  </div>
  <div>
    <div class="row">
      <div class="span4">
        &nbsp;
      </div>
      <div class="span4" style="margin-top:180px;">
        &nbsp;
        <a href="" style="color:pink;">Contact Us</a> | 
        <a href="/terms.html" style="color:pink;">Terms and Conditions</a> | 
        <a href="/privacy.html" style="color:pink;">Privacy Policy</a>
      </div>
      <div class="span4">
        &nbsp;
      </div>
    </div>
  </div>


</div>

