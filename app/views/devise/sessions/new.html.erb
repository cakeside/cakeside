<div class="row">
  <div class="span16">
    <div class="row">
      <div class="span5">
        <div class="logo"><a href="/"><img src="/assets/cakeside-logo.png" width="100%"/></a></div>
      </div>
      <div class="span5 offset6">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <fieldset>
            <%= f.email_field :email, :placeholder => 'Email', :size => 20, :class=> "span2" %>
            <%= f.password_field :password, :placeholder => 'Password',:size => 20 , :class=> "span2" %>
            <%= f.submit "Sign In", :class => "btn" %>
            <%= f.check_box :remember_me %> Remember me
            <%= link_to "Forgot it?", new_password_path(resource_name) %>
          </fieldset>
        <% end %>
      </div>
    </div>
    <div class="row"> <div class="span16">&nbsp;</div> </div>
    <div class="row"> <div class="span16">&nbsp;</div> </div>
    <div class="row"> <div class="span16">&nbsp;</div> </div>
    <div class="row">
      <div class="span10"> 
        <% if notice %><p class="alert-message success"><%= notice %></p> <% end %>
        <% if alert %><p class="alert-message error"><%= alert %></p><% end %>
        <%= devise_error_messages! %>
        <h2>Why CakeSide?</h2>
        <p>Instant updates from your friends, industry experts, and what’s happening around the world.</p>
        <h2>About Us</h2>
        <p>Instant updates from your friends, industry experts, and what’s happening around the world.</p>
      </div>
      <div class="span5 offset1">
        <h3>New to CakeSide? <em>Join Today!</em></h3>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <p><%= f.text_field :name, :placeholder => 'Full name', :class =>"xlarge"%></p>
          <p><%= f.email_field :email, :placeholder => 'Email', :class=> "xlarge"%></p>
          <p><%= f.password_field :password, :placeholder => 'Password', :class=> "xlarge"%></p>
          <p><%= f.password_field :password_confirmation, :placeholder => 'Confirm Password', :class=> "xlarge"%></p>
          <p><%= f.submit "Sign up", :style => "height:28px;", :class => "btn primary" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
